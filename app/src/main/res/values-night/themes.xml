<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ==========================================================
         ðŸŒ™ Dark Mode Theme
         Automatically activated in Night Mode
         ========================================================== -->
    <style name="Theme.AttendanceManagementSystem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Color Palette -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Status & Navigation Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Components -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.Switch</item>
    </style>

    <!-- ==========================================================
         ðŸŒ‘ Splash Screen (Dark Mode)
         ========================================================== -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
